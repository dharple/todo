{
    "name": "dharple/todo",
    "description": "Old TODO Software",
    "type": "project",
    "license": "BSD-2-Clause",
    "authors": [
        {
            "name": "Doug Harple",
            "email": "dharple@gmail.com"
        }
    ],
    "require": {
        "php": "^7.2.5"
    },
    "require-dev": {
        "outsanity/phpcs": "*"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "process-timeout": 0,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "go":      "php -S localhost:8666 -t public -d auto_prepend_file=../include/common.php",
        "phpcbf":  "phpcbf",
        "phpcs":   "phpcs"
    }
}
