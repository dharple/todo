{% extends 'base.html.twig' %}

{% block title %}
To Do List
{% endblock %}

{% block body %}
<form method=POST>
    <br />
    <table cellpadding=0 cellspacing=0 border=0>
        <tr>
            <td align=right>
                Username:
            </td>
            <td align=left>
                <input type="text" name="username" />
            </td>
        </tr>
        <tr>
            <td align=right>
                Password:
            </td>
            <td align=left>
                <input type="password" name="password" />
            </td>
        </tr>
        <tr>
            <td align=center colspan=2>
                <input type="submit" name="submitButton" value="Login" />
            </td>
        </tr>
    </table>
</form>
{% endblock %}
