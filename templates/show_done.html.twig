{% extends 'base.html.twig' %}

{% set title = "Items Done - " ~ period %}

{% block body %}

<div class="no-print">
    <div class="container done">
        <div class="row">
            <div class="col-12 col-md-6 text-center text-md-start">
                <b>{{ title }}</b>
            </div>
            <div class="col-12 col-md-6 text-center text-md-end">
                {% if view != 'year' %}
                    {% if sort == 'section' %}
                        <a href="show_done.php?sort=task&view={{ view }}">Sort by Task</a>
                    {% else %}
                        <a href="show_done.php?sort=section&view={{ view }}">Sort by Section</a>
                    {% endif %}
                {% else %}
                    {% if sort == 'section' %}
                        <a href="show_done.php?sort=task&view={{ view }}&year={{ year }}">Sort by Task</a>
                    {% else %}
                        <a href="show_done.php?sort=section&view={{ view }}&year={{ year }}">Sort by Section</a>
                    {% endif %}
                {% endif %}
                |
                <a href="index.php">Home</a>
            </div>
        </div>
    </div>

    <hr />
</div>

{% if sort == 'section' %}
    {% include 'partials/show_done/by_section.html.twig' %}
{% else %}
    {% include 'partials/show_done/by_task.html.twig' %}
{% endif %}

{% endblock %}
