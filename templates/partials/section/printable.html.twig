<div class="section mb-3">
    <div class="row mb-1">
        <div class="col-12">
            <span class="section-label">
                {{ section.name }}
                {% if section.status == 'Inactive' %}
                    (Inactive)
                {% endif %}
            </span>
        </div>
    </div>
    {% for item in items %}
        <div class="row item-row">
            <div class="col-1 text-right">
                {% if showPriority == 'y' or (showPriority == 'above_normal' and item.priority < priorityNormal) %}
                    {{ item.priority }}
                {% endif %}
            </div>
            <div class="col-1 text-right">
                <span class="align-top">
                    {% if item.status == 'Open' %}
                        &#x2610;
                    {% else %}
                        &#x2611;
                    {% endif %}
                </span>
            </div>
            <div class="col text-left">
                <label class="list-item-label" label-for="item-{{ item.id }}">
                    <span class="{% if item.status != 'Open' %}closed{% elseif item.priority <= priorityHigh %}high_priority{% endif %}">
                        {{ item.task }}
                    </span>
                </label>
            </div>
        </div>
    {% endfor %}
</div>
